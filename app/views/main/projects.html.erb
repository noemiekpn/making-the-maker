<script type="text/javascript" src="http://vnjs.net/www/project/freewall/example/js/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="http://vnjs.net/www/project/freewall/freewall.js"></script>
		

<div id="content-wrapper" class="center-horizontal">
	<div class='header'>
			<div class="clearfix">
				<div class="float-left">
						<h1><a href="">Free Wall</a></h1>
						<div class='target'>Creating dynamic grid layouts.</div>
				</div>
			</div>
		</div>
		<div id="freewall" class="free-wall"></div>

		<script type="text/javascript">

			var temp1 = "<div class='cell' style='width:{width}px; height: {height}px; background-image: url(<%= asset_path '1.jpg'%>)'></div>";
			var temp2 = "<div class='cell' style='width:{width}px; height: {height}px; background-image: url(<%= asset_path '1.jpg'%>)'></div>";
			var temp3 = "<div class='cell' style='width:{width}px; height: {height}px; background-image: url(<%= asset_path '3.jpg'%>)'></div>";
			var temp41 = "<div class='cell' style='width:{width}px; height: {height}px; background-image: url(<%= asset_path '4.jpg'%>)'>";
			var temp4 = temp41;



			var test1 = '<div class="cell"><a href="project_details.html?id=1"><%= image_tag("2.jpg", width: "200", height: "200") %></a></div>';



			
			var w = 200, h = 200, html = '', limitItem = 4	;
			html += test1;
			html += temp1.replace(/\{height\}/g, h).replace(/\{width\}/g, w);
			html += temp2.replace(/\{height\}/g, h).replace(/\{width\}/g, w);
			html += temp3.replace(/\{height\}/g, h).replace(/\{width\}/g, w);
			html += temp4.replace(/\{height\}/g, h).replace(/\{width\}/g, w);
			$("#freewall").html(html);

			var wall = new Freewall("#freewall");
			wall.reset({
				selector: '.cell',
				animate: true,
				cellW: 200,
				cellH: 200,
				onResize: function() {
					wall.refresh();
				}
			});
			wall.fitWidth();
			// for scroll bar appear;
			$(window).trigger("resize");
		</script>
</div>